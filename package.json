  "author": "Fredrik Nicol <fredrik.nicol@gmail.com>",
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "16.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gzip-size": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^5.3.0",
    "prettier": "^2.7.1",
    "react": "19.0.0-rc.0",
    "react-dom": "19.0.0-rc.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-closure-compiler-js": "^1.0.6",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^29.1.3",
    "typescript": "~4.7.4"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "release": "lerna publish --pre-dist-tag next",
    "build": "npm run clean && lerna run build --",
    "clean": "lerna run clean --parallel",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:code": "jest",
    "test:types": "jest --testMatch \"**/src/**/typecheck.spec.(ts|tsx)\"",
    "test:react": "jest --testMatch \"**/react/src/**/*.spec.(ts|tsx)\"",
    "test": "jest --testMatch \"**/src/**/*.spec.(ts|tsx)\"",
    "lazy": "tsc && npm run lint -- --fix && npm run test"
  },
